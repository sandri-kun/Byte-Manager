<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<RelativeLayout
		android:id="@+id/linearLayout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingTop="2dp"
		android:paddingBottom="4dp"
		android:orientation="vertical">
		<org.bytedata.manager.ui.components.BackupImageView
			android:id="@+id/imageView"
			android:focusable="false"
			android:layout_width="32dp"
			android:layout_height="32dp"
			android:layout_marginLeft="8dp"
			android:background="#263238"
			android:src="@drawable/folder_24dp"
			android:layout_centerVertical="true" />
		<TextView
			android:id="@+id/titleView"
			android:focusable="false"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="6dp"
			android:layout_marginRight="6dp"
			android:padding="2dp"
			android:text="Main.java"
			android:textSize="12sp"
			android:textColor="#000000"
			android:maxLines="6"
			android:ellipsize="end"
			android:layout_toRightOf="@id/imageView" />
		<TextView
			android:id="@+id/valueView"
			android:focusable="false"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="6dp"
			android:padding="2dp"
			android:text="24-02-2024"
			android:textSize="10sp"
			android:textColor="#000000"
			android:singleLine="true"
			android:layout_toRightOf="@id/imageView"
			
			android:layout_below="@id/titleView" />
		<TextView
			android:id="@+id/sizeView"
			android:focusable="false"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="4dp"
			android:padding="2dp"
			android:text="10,5M"
			android:textSize="10sp"
			android:textColor="#000000"
			android:singleLine="true"
			android:layout_toRightOf="@id/valueView"
			
			android:layout_below="@id/titleView" />
		<ImageView
			android:id="@+id/enterImageView"
			android:focusable="false"
			android:layout_width="18dp"
			android:layout_height="18dp"
			android:layout_marginRight="6dp"
			android:src="@drawable/chevron_right_24dp"
			android:scaleType="fitCenter"
			android:layout_centerVertical="true"
			android:layout_alignParentEnd="true" />
	</RelativeLayout>
</LinearLayout>
